// You can customize colors and animation as you like
<div class="loader-wrapper">
    <div class="loader"></div>
</div>

<style>
    .loader-wrapper {
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: 100vh;
    }

    .loader {
        border: 8px solid #f3f3f3; /* Light gray */
        border-top: 8px solid #4B22B5; /* Purple accent */
        border-radius: 50%;
        width: 60px;
        height: 60px;
        animation: spin 1s linear infinite;
    }

    @keyframes spin {
        0% { transform: rotate(0deg); }
        100% { transform: rotate(360deg); }
    }
</style>
